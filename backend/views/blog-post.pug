html 
  head 
    title= pageTitle 
    link(rel="stylesheet" href="/static/css/blog-post.css")
  body 
    form(class="blog-post" action="/blogs/post" method="POST")
      div(class="block") 
        label(for="title") Blog Title 
        input(
          type="text"
          name="title"
          placeholder="Blog title"
          value= title
        )
        if titleError
          span(class="error")= titleError
      div(class="block") 
        label(for="description") Description 
        textarea(
          name="description"
          cols="60"
          rows="7"
          placeholder="Blog description"
        )= description
        if descriptionError
          span(class="error")= descriptionError
      div(class="block") 
        label(for="image_url") Image URL 
        input(
          type="text"
          name="image_url"
          placeholder="Blog title"
          value= image_url
        )
        if imageUrlError
          span(class="error")= imageUrlError
      div(class="block") 
        label(for="content") Content 
        textarea(
          name="content"
          cols="60"
          rows="20"
          placeholder="Blog content"
        )= content
        if contentError
          span(class="error")= contentError
      button(type="submit" class="save-button") Save Post